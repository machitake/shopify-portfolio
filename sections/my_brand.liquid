        },
        {
            "type": "textarea",
            "id": "section_textarea",
            "label": "本文",
            "default": "本文を入力してください"
        },
        {
            "type": "text",
            "id": "section_btn_txt",
            "label": "ボタン用テキスト",
            "default": "ボタン"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "ボタン用リンク"
        },
        {
            "type": "header",
            "content": "背景画像",
            "info": "背景画像を選択してください"
        },
        {
            "type": "image_picker",
            "id": "image1",
            "label": "背景画像1"
        },
        {
        "type": "image_picker",
        "id": "image2",
        "label": "背景画像2"
        }
    ],
    "presets":[
    {
        "name" : "ブランドセクション",
