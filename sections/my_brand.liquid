<section class="brand">
    <div class="brand__container fadeUpTrigger">
        <div class="brand__left">
            <div class="brand-ttl">{{ section.settings.section_ttl }}</div><!-- /.brand-ttl -->
            <p class="brand-read">{{ section.settings.section_read }}</p><!-- /.brand-read -->
        </div><!-- /.brand__left -->

        <div class="brand__right">
            <div class="brand-txt">
                {{ section.settings.section_textarea }}
            </div><!-- /.brand-txt -->

            <div class="brand-btn">
                <a {% if section.settings.btn_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.btn_link }}"{% endif %} >{{ section.settings.section_btn_txt }}</a>
            </div><!-- /.brand-btn -->
        </div><!-- /.brand__right -->
    </div><!-- /.brand__container -->
</section><!-- /.brand -->



{%- style -%}
    .brand {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f2edef;
        background-size: cover;
        width: 100%;
        height: 500px;
        margin-top: 150px;
    }

    .brand::after {
        content: "";
        position: absolute;
        background: url({{ section.settings.image1 | image_url }})no-repeat;
        background-size: contain;
        left: 0;
        bottom: 0;
        width: 26vw;
        height: 21.6666vw;
    }
    
    .brand::before {
        content: "";
        position: absolute;
        background: url({{ section.settings.image2 | image_url }})no-repeat;
        background-size: contain;
        right: 0;
        top: 0;
        width: 26vw;
        height: 24.7395vw
    }
    

    @media screen and (max-width: 750px) {
        .brand {
            margin-top: 60px;
        }

        .brand::after, .brand::before {
            width: 50vw;
            height: 47vw;
        }
    }

{%- endstyle -%}

{% schema %}
{
    "name": "ブランドセクション",
    "settings": [
        {
            "type": "text",
            "id": "section_ttl",
            "label": "タイトルを入力してください",
            "default": "タイトル"
        },
        {
            "type": "text",
            "id": "section_read",
            "label": "リード文",
